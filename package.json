{
  "name": "blt-leaf",
  "version": "1.0.0",
  "description": "PR Readiness Checker - Track and monitor GitHub Pull Request status",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:create": "wrangler d1 create pr-tracker",
    "db:init": "wrangler d1 execute pr-tracker --file=./schema.sql",
    "test": "npm run test:backend",
    "test:backend": "python3 -m unittest discover -s tests -p \"test_*.py\" -v"
  },
  "keywords": [
    "github",
    "pull-request",
    "cloudflare",
    "workers",
    "pr-tracker"
  ],
  "author": "OWASP BLT",
  "license": "MIT",
  "devDependencies": {
    "wrangler": "^4.64.0"
  }
}
